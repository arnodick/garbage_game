          <argument>
            <kind>1</kind>
            <string>///BUTTON PRESS

//scroll up
if (y &gt; 50)
{
    y -= 1;
}

//if click on button, depress it
if (mouse_check_button_pressed(mb_left))
{
    if ( (mouse_x &gt; x) and (mouse_x &lt; (x + width)) )
    {
        if ( (mouse_y &gt; y) and (mouse_y &lt; (y + height)) )
        {
            button_pressed = true;
            if (!audio_is_playing(snd_clickdown))
            {
                audio_play_sound(snd_clickdown, 1, false);
            }
        }
    }
}
// if release on button, start new round
else if (mouse_check_button_released(mb_left))
{
    if ( (mouse_x &gt; x) and (mouse_x &lt; (x + width)) )
    {
        if ( (mouse_y &gt; y) and (mouse_y &lt; (y + height)) )
        {
            button_pressed = false;
            if (!audio_is_playing(snd_clickup))
            {
                audio_play_sound(snd_clickup, 1, false);
            }
            restarting = true;
        }
    }
}

if (button_pressed == true)
{
    button_text = c_dkgray;
    button_colour = c_dkergray;
    text = text_alt;
}
else
{
    button_text = button_text_init;
    button_colour = button_colour_init;
}

//if button released, when sound is over, new round
if (restarting == true)
{
    if (!audio_is_playing(snd_clickup))
    {
        global.level_count++;
        with (all)
        {
            instance_destroy();
            room_goto(rAsleep);
        }
    }
}
</string>
