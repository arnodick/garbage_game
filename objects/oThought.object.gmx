chain_x = x + lengthdir_x(12 + (clicked*9), 270 - hspeed*6);
chain_y = y + lengthdir_y(12 + (clicked*9), 270 - hspeed*6);

angle -= 0.1;
image_angle = (sin(angle))*50;  //make thought angle oscillate

//click + release to go t next scene
if (mouse_check_button_pressed(mb_left))
{
    clicked = true;
    audio_play_sound(snd_lightpull, 1, false);
}
if (clicked == true)
{
    if (mouse_check_button_released(mb_left))
    {
        audio_play_sound(snd_lightrelease, 1, false);
        released = true;
        clicked = false;
    }
}
if (released == true)
{
    if (!audio_is_playing(snd_lightrelease))
    {
        with(all)
        {
            instance_destroy();
        }
        room_goto(rScene2);
    }
}

// keep thougts in bounds!
if (x &lt; 0)
{
    x = 0;
}
else if (x &gt; room_width)
{
    x = room_width;
}
if (y &lt; 0)
{
    y = 0;
}
else if (y &gt; room_height)
{
    y = room_height;
}
